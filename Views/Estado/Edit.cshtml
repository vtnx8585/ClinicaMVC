@model ClinicaMVC.Models.Estado

@{
    Layout = "~/Views/Shared/_VistaCatalogo.cshtml";
    ViewBag.Title = "Editar";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="portlet light portlet-fit">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-exchange"></i>
                <span class="caption-subject sbold uppercase">Editar Estado</span>
            </div>
            <div class="actions">
                @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-transparent blue btn-outline btn-circle btn-sm" })
            </div>
        </div>
        <div class="portlet-body form">
            @Html.HiddenFor(model => model.EstadoID)
            <form role="form">
                <div class="form-body">
                    <div class="form-group form-md-line-input form-md-floating-label">
                        @*<input type="text" class="form-control" id="form_control_1">*@
                        @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control", @id = "nombreEstado" } })
                        <label for="nombreEstado">Nombre de estado</label>
                        <span class="help-block">@Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })</span>
                    </div>
                    <div class="form-group form-md-line-input form-md-floating-label">
                        @*<input type="text" class="form-control" id="form_control_1">*@
                        @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control", @id = "descripcionEstado" } })
                        <label for="descripcionEstado">Descripcion de estado</label>
                        <span class="help-block">@Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })</span>
                    </div>
                </div>
                <div class="form-actions noborder">
                    <button type="submit" class="btn blue">Guardar</button>
                </div>
            </form>
        </div>
    </div>    
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
